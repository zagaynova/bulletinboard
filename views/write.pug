html
	head
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		title Show
	body
		div
			nav.navbar.navbar-inverse(role='navigation', style='padding-left:130px;')
				ul.nav.navbar-nav
					li.active
						a(href='./newmessage') New Message
					li
						a(href='./') All Messages

		.container
			.row
				.col-xs-6.offset-xs-3
					h1.text-xs-center Write a new message
					hr
					form(action='./addmessage', method='post')
						.form-group
							label Title:
								input(type="text" name="title" placeholder="Short summary" class="form-control")
						.form-group
							label Message:
								textarea(type="text" name="body" placeholder="Type a message" autocomplete="off" class="form-control" rows="5")
						.form-group
							button(type="submit" class="btn btn-success btn-lg btn-") Submit
